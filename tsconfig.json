{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "lib": ["es2016", "esnext"],
    "paths": {
      "*": ["src/*"]
    },
    "allowJs": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "./src/**/__tests__/*.ts",
    "./src/**/*.test.ts",
    "./src/**/*.spec.ts"
  ]
}
